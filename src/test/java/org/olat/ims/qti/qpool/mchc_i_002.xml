								<material>             
									<matimage imagtype = "image/gif" uri = "image3.gif"/>          
								</material>        
							</response_label>
							<response_label ident = "D">          
								<material>             
									<matimage imagtype = "image/gif" uri = "image4.gif"/>          
								</material>        
							</response_label>
						</flow_label>                                
					</render_choice>      
				</response_lid>
			</flow>                
		</presentation>
	</item>
