<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- JMS Stuff for ActiveMQ -->
	<bean id="searchConnectionFactory" class="org.apache.activemq.artemis.jms.client.ActiveMQJMSConnectionFactory" lazy-init="true">
		<property name="brokerURL" value="${search.broker.url}" />
	</bean>

	<bean id="searchQueue" class="org.apache.activemq.artemis.jms.client.ActiveMQQueue" lazy-init="true">
		<constructor-arg value="olat/searchQueue" />
	</bean>
	
	
	<bean id="indexConnectionFactory" class="org.apache.activemq.artemis.jms.client.ActiveMQJMSConnectionFactory" lazy-init="true">
		<property name="brokerURL" value="${index.broker.url}" />
	</bean>

	<bean id="indexQueue" class="org.apache.activemq.artemis.jms.client.ActiveMQQueue" lazy-init="true">
		<constructor-arg value="olat/indexQueue" />
	</bean>
</beans>
